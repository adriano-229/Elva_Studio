def modulePath = ''
def relativeModulePath = 'My Car/mycar'

def moduleDir() {
    return modulePath
}

def imageName() {
    return params.REGISTRY_URL?.trim()
        ? "${params.REGISTRY_URL}/mycar-api"
        : 'mycar-api'
}

pipeline {
    agent {
        docker {
            image 'maven:3.9.9-eclipse-temurin-17'
        }
    }

    options {
        timestamps()
        ansiColor('xterm')
    }

    parameters {
        string(name: 'REGISTRY_URL', defaultValue: '', description: 'Opcional: registry (por ejemplo registry.example.com)')
        string(name: 'IMAGE_TAG', defaultValue: 'latest', description: 'Tag para la imagen Docker')
        string(name: 'REGISTRY_CREDENTIALS_ID', defaultValue: '', description: 'Credencial Jenkins para el registry (username/password)')
        booleanParam(name: 'PUSH_IMAGE', defaultValue: false, description: 'Hacer push al registry luego de construir la imagen')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    if (fileExists('pom.xml')) {
                        modulePath = '.'
                    } else if (fileExists("${relativeModulePath}/pom.xml")) {
                        modulePath = relativeModulePath
                    } else if (fileExists("integrador_2/${relativeModulePath}/pom.xml")) {
                        modulePath = "integrador_2/${relativeModulePath}"
                    } else {
                        error("No se encontró el módulo ${relativeModulePath}")
                    }
                }
            }
        }

        stage('Build & Test') {
            steps {
                dir(moduleDir()) {
                    sh 'mvn -B -DskipTests clean package'
                }
            }
        }

        stage('Build Image') {
            steps {
                sh "docker build -t ${imageName()}:${params.IMAGE_TAG} '${moduleDir()}'"
            }
        }

        stage('Push Image') {
            when {
                expression {
                    return params.PUSH_IMAGE &&
                        params.REGISTRY_URL?.trim() &&
                        params.REGISTRY_CREDENTIALS_ID?.trim()
                }
            }
            steps {
                withCredentials([usernamePassword(credentialsId: params.REGISTRY_CREDENTIALS_ID,
                        usernameVariable: 'REG_USER', passwordVariable: 'REG_PASS')]) {
                    sh 'echo "$REG_PASS" | docker login ' + params.REGISTRY_URL + ' -u "$REG_USER" --password-stdin'
                    try {
                        sh "docker push ${imageName()}:${params.IMAGE_TAG}"
                    } finally {
                        sh 'docker logout ' + params.REGISTRY_URL
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
