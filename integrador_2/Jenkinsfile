def repoBase = ''

pipeline {
    agent {
        docker {
            image 'maven:3.9.9-eclipse-temurin-17'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    options {
        timestamps()
        ansiColor('xterm')
    }

    parameters {
        string(name: 'REGISTRY_URL', defaultValue: '', description: 'Opcional: registry (por ejemplo registry.example.com)')
        string(name: 'IMAGE_TAG', defaultValue: 'latest', description: 'Tag para las im치genes Docker')
        string(name: 'REGISTRY_CREDENTIALS_ID', defaultValue: '', description: 'Credencial Jenkins para el registry (username/password)')
        booleanParam(name: 'PUSH_IMAGES', defaultValue: false, description: 'Hacer push al registry luego de construir las im치genes')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    if (fileExists("My Car/mycar/pom.xml")) {
                        repoBase = ''
                    } else if (fileExists("integrador_2/My Car/mycar/pom.xml")) {
                        repoBase = 'integrador_2/'
                    } else {
                        error('No se encontr칩 el m칩dulo My Car/mycar en el workspace')
                    }
                }
            }
        }

        stage('Build & Test') {
            parallel {
                stage('API') {
                    steps {
                        dir("${repoBase}My Car/mycar") {
                            sh 'mvn -B -DskipTests clean package'
                        }
                    }
                }
                stage('Admin') {
                    steps {
                        dir("${repoBase}mycar-admin") {
                            sh 'mvn -B -DskipTests clean package'
                        }
                    }
                }
                stage('Cliente') {
                    steps {
                        dir("${repoBase}mycar-cliente") {
                            sh 'mvn -B -DskipTests clean package'
                        }
                    }
                }
            }
        }

        stage('Build Images') {
            steps {
                script {
                    [
                        [name: 'mycar-api',     path: "My Car/mycar"],
                        [name: 'mycar-admin',   path: "mycar-admin"],
                        [name: 'mycar-cliente', path: "mycar-cliente"]
                    ].each { module ->
                        def image = buildImageName(module.name)
                        def modulePath = "${repoBase}${module.path}"
                        sh "docker build -t ${image}:${params.IMAGE_TAG} '${modulePath}'"
                    }
                }
            }
        }

        stage('Push Images') {
            when {
                expression {
                    return params.PUSH_IMAGES &&
                        params.REGISTRY_URL?.trim() &&
                        params.REGISTRY_CREDENTIALS_ID?.trim()
                }
            }
            steps {
                script {
                    def modules = ['mycar-api', 'mycar-admin', 'mycar-cliente']

                    withCredentials([usernamePassword(credentialsId: params.REGISTRY_CREDENTIALS_ID,
                            usernameVariable: 'REG_USER', passwordVariable: 'REG_PASS')]) {
                        sh 'echo "$REG_PASS" | docker login ' + params.REGISTRY_URL + ' -u "$REG_USER" --password-stdin'
                        try {
                            modules.each { module ->
                                def image = buildImageName(module)
                                sh "docker push ${image}:${params.IMAGE_TAG}"
                            }
                        } finally {
                            sh 'docker logout ' + params.REGISTRY_URL
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}

def buildImageName(String image) {
    return params.REGISTRY_URL?.trim() ? "${params.REGISTRY_URL}/${image}" : image
}
