def repoBase = ''

pipeline {
    agent {
        docker {
            image 'maven:3.9.9-eclipse-temurin-17'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    options {
        timestamps()
        ansiColor('xterm')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    if (fileExists("My Car/mycar/pom.xml")) {
                        repoBase = ''
                    } else if (fileExists("integrador_2/My Car/mycar/pom.xml")) {
                        repoBase = 'integrador_2/'
                    } else {
                        error('No se encontró el módulo My Car/mycar en el workspace')
                    }
                }
            }
        }

        stage('Build & Test') {
            parallel {
                stage('API') {
                    steps {
                        dir("${repoBase}My Car/mycar") {
                            sh 'mvn -B -DskipTests clean package'
                        }
                    }
                }
                stage('Admin') {
                    steps {
                        dir("${repoBase}mycar-admin") {
                            sh 'mvn -B -DskipTests clean package'
                        }
                    }
                }
                stage('Cliente') {
                    steps {
                        dir("${repoBase}mycar-cliente") {
                            sh 'mvn -B -DskipTests clean package'
                        }
                    }
                }
            }
        }

        stage('Deploy (docker compose up)') {
            steps {
                script {
                    def composeFile = "${repoBase}docker-compose.yml"
                    if (!fileExists(composeFile)) {
                        error("No se encontró ${composeFile}. ¿Está el repo en la ruta esperada?")
                    }
                    sh "docker compose -f '${composeFile}' up -d --build"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}