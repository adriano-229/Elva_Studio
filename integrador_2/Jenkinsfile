pipeline {
    agent {
        docker {
            image 'maven:3.9.9-eclipse-temurin-17'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    options {
        timestamps()
        ansiColor('xterm')
    }

    parameters {
        string(name: 'REGISTRY_URL', defaultValue: '', description: 'Opcional: registry (por ejemplo registry.example.com)')
        string(name: 'IMAGE_TAG', defaultValue: 'latest', description: 'Tag para las imágenes Docker')
        string(name: 'REGISTRY_CREDENTIALS_ID', defaultValue: '', description: 'Credencial Jenkins para el registry (username/password)')
        booleanParam(name: 'PUSH_IMAGES', defaultValue: false, description: 'Hacer push al registry luego de construir las imágenes')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            parallel {
                stage('API') {
                    steps {
                        dir('My Car/mycar') {
                            sh 'mvn -B clean verify'
                        }
                    }
                }
                stage('Admin') {
                    steps {
                        dir('mycar-admin') {
                            sh 'mvn -B clean verify'
                        }
                    }
                }
                stage('Cliente') {
                    steps {
                        dir('mycar-cliente') {
                            sh 'mvn -B clean verify'
                        }
                    }
                }
            }
        }

        stage('Build Images') {
            steps {
                script {
                    def modules = [
                        [name: 'mycar-api',     path: "My Car/mycar"],
                        [name: 'mycar-admin',   path: "mycar-admin"],
                        [name: 'mycar-cliente', path: "mycar-cliente"]
                    ]

                    modules.each { module ->
                        def image = buildImageName(module.name)
                        sh "docker build -t ${image}:${params.IMAGE_TAG} '${module.path}'"
                    }
                }
            }
        }

        stage('Push Images') {
            when {
                expression {
                    return params.PUSH_IMAGES &&
                        params.REGISTRY_URL?.trim() &&
                        params.REGISTRY_CREDENTIALS_ID?.trim()
                }
            }
            steps {
                script {
                    def modules = ['mycar-api', 'mycar-admin', 'mycar-cliente']

                    withCredentials([usernamePassword(credentialsId: params.REGISTRY_CREDENTIALS_ID,
                            usernameVariable: 'REG_USER', passwordVariable: 'REG_PASS')]) {
                        sh 'echo "$REG_PASS" | docker login ' + params.REGISTRY_URL + ' -u "$REG_USER" --password-stdin'
                        try {
                            modules.each { module ->
                                def image = buildImageName(module)
                                sh "docker push ${image}:${params.IMAGE_TAG}"
                            }
                        } finally {
                            sh 'docker logout ' + params.REGISTRY_URL
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}

def buildImageName(String image) {
    return params.REGISTRY_URL?.trim() ? "${params.REGISTRY_URL}/${image}" : image
}
